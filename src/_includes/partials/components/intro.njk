<header class="[ intro ] [ pad-top-900 ]">
  <div class="[ inner-wrapper ] [ sf-flow ]">
    <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ p-name ]">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ] pad-top-700">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
</header>
